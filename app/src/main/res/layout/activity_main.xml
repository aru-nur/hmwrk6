<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_san"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="225"
        android:textSize="40dp"
        android:gravity="left"
        android:paddingRight="10dp"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnDel"
            style="@style/btn_blue"
            android:text="del"
        <Button
             android:id="@+id/btny"
             style="@style/btn_blue"
             android:text="=">



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn1"
            style="@style/btns_tyle"
            android:text="1">

        </Button>
        <Button
            android:id="@+id/btn2"
            style="@style/btns_tyle"
            android:text="2">

        </Button>
        <Button
            android:id="@+id/btn3"
            style="@style/btns_tyle"
            android:text="3">

        </Button>
        <Button
            android:id="@+id/btnj"
            style="@style/btns_tyle2"
            android:text="/">

        </Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn4"
            style="@style/btns_tyle"
            android:text="4">

        </Button>
        <Button
            android:id="@+id/btn5"
            style="@style/btns_tyle"
            android:text="5">

        </Button>
        <Button
            android:id="@+id/btn6"
            style="@style/btns_tyle"
            android:text="6">

        </Button>
        <Button
            android:id="@+id/btnk"
            style="@style/btns_tyle2"
            android:text="-">

        </Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn7"
            style="@style/btns_tyle"
            android:text="7">

        </Button>
        <Button
            android:id="@+id/btn8"
            style="@style/btns_tyle"
            android:text="8">

        </Button>
        <Button
            android:id="@+id/btn9"
            style="@style/btns_tyle"
            android:text="9">

        </Button>
        <Button
            android:id="@+id/btnl"
            style="@style/btns_tyle2"
            android:text="X">

        </Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btne"
            style="@style/btns_tyle"
            android:text=".">

        </Button>
        <Button
            android:id="@+id/btnt"
            style="@style/btns_tyle"
            android:text="0">

        </Button>
        <Button
            android:id="@+id/btnm"
            style="@style/btns_tyle2"
            android:text="%">

        </Button>
        <Button
            android:id="@+id/btnn"
            style="@style/btns_tyle2"
            android:text="+">

        </Button>

    </LinearLayout>


</LinearLayout>